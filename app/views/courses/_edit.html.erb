<%= simple_form_for(@course, wrapper: :input_group,
    input_html: {class: 'form-control'},
    html: { class: 'form-horizontal' }) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
      <i class="fa fa-times"></i>
    </button>
    <h3 class='modal-title'>Edit Course</h3>
  </div>
  <div class="modal-body">
    <div class="form-inputs">
      <%= f.input :course_code, label: 'Course Code' %>
      <%= f.input :min_students, label: 'Minimum Number of Students' %>
      <%= f.input :max_students, label: 'Maximum Number of Students' %>
      <%= f.input :duedate, wrapper: :input_group, label: 'Deployment Date' do %>
        <%= f.input_field :deadline, as: :string,
            class: "form-control" %>
        <span class="input-group-btn">
          <button id='project-settings-date-clear-button' class="btn btn-default">
            <i class='fa fa-times'></i>
          </button>
        </span>
      <% end %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.button :submit, 'Update', class: "btn-warning" %>
    <div class="error hide">
      <div class="alert alert-error"></div>
    </div>
  </div>
<% end %>
