<% if flash.notice %>
  <div class="message-success message-can-close js-message-can-close">
    <i class="fa fa-info-circle"></i>
    <%= flash.notice %>
  </div>
<% elsif flash.alert %>
  <div class="message-danger message-can-close js-message-can-close">
    <i class="fa fa-warning"></i>
    <%= flash.alert %>
  </div>
<% end %>
