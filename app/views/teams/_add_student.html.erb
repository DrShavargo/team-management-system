<%= simple_form_for(@team,
    url: add_student_team_path, :method => :post,
    wrapper: :input_group, input_html: {class: 'form-control'},
    html: { class: 'form-horizontal' }) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
      <i class="fa fa-times"></i>
    </button>
    <h3 class='modal-title'>Select Students</h3>
  </div>
  <div class="modal-body">
    <div  class="form-inputs add-students-form"
          data-max="<%= @team.course.max_students - @team.students.count %>">
      <% if @students.empty? %>
        There are no students without teams in this course!
      <% else %>
        <%= f.collection_check_boxes :student_ids, @students, :id, :name %>
      <% end %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.button :submit, 'Save', class: "btn-warning" %>
    <div class="error hide">
      <div class="alert alert-error"></div>
    </div>
  </div>
<% end %>
